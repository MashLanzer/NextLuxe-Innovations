{
  "hosting": {
    "site": "nextluxe-innovations-llc",
    "public": "public",
    "ignore": [
      "firebase.json",
      "/No/",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/!(*.@(js|css|png|jpg|jpeg|gif|svg|webp|eot|otf|ttf|woff|woff2))",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store, no-cache, must-revalidate"
          }
        ]
      },
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|gif|svg|webp|eot|otf|ttf|woff|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
